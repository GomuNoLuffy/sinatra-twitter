<% if current_user %>
  <p>Signed in as @<%= current_user.username %></p>
<% end %>

<a href="/users/<%= current_user.id %>">View Profile</a>

<form method="post" action="/tweet">
    <input type=text placeholder="What's happening?" name="tweet[title]"></br>
    <input type=submit value="Tweet">
</form>
<%= @error if @error.present? %> 

<% Tweet.all.each do |t| %>
<p><a class="link" href="/tweets/<%= t.id %>"><%= t.title %></a> <a href="/users/<%= t.user.id %>"> @<%= t.user.username %></a></p>
<% end %>

