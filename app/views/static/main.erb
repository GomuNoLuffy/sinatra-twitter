<form method="post" action="/tweet">
    <input type=text placeholder="What's happening?" name="tweet[title]"></br>
    <button type="submit" class="btn btn-primary">
    <i class="icon-user icon-white"></i><span class="glyphicon glyphicon-pencil"></span> Tweet 
   </button>

</form>
<%= @error if @error.present? %> 

<% @maintweets.each do |tweet| %>
<p><a href="/users/<%= tweet.user.id %>"> @<%= tweet.user.username %></a> 
<abbr class="timeago" title="<%= tweet.created_at.getutc.iso8601 %>">
  <%= tweet.created_at.to_s %>
</abbr>
</p>
<p><a class="link" href="/tweets/<%= tweet.id %>"><%= tweet.title %></a></p>


<% end %>

<script type="text/javascript" >
  $("abbr.timeago").timeago();

</script>